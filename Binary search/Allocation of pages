#include <bits/stdc++.h>
using namespace std;

//TC = O(N)* log N

bool f(int a[], int n, int student, int barrier)
{
    int pages = 0, allocatedstudent = 1;
    for (int i = 0; i < n; i++)
    {
        if (a[i] > barrier)
            return false;
        if (pages + a[i] > barrier)
        {
            allocatedstudent += 1;
            pages = a[i];
        }
        else
        {
            pages += a[i];
        }
    }
    if (allocatedstudent > student)
        return false;
    else
        return true;
}

int main()
{
    int n;
    cin >> n;
    int student;
    cin >> student;
    int a[n];
    for (int i = 0; i < n; i++)
        cin >> a[i];

    int low = a[0];
    int high = 0;

    for (int i = 0; i < n; i++)
    {
        high = high + a[i];
        low = min(low, a[i]);
    }
   

    int result = -1;
    while (low <= high)
    {
        int mid = (low + high) >> 1;
       

        if (f(a, n, student, mid))
        {
            result = mid;
            high = mid - 1;
        }
        else
            low = mid + 1;
    }
    cout << result << endl;
    return 0;
}
